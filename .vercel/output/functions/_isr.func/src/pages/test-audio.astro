    // Audio Feedback Manager Mock for Testing
    class AudioFeedbackManagerTest {
      constructor() {
        this.audioContext = null;
        this.audioQueue = [];
        this.isPlaying = false;
        this.volume = 0.8;
        this.isMuted = false;
        this.currentState = 'idle';
        this.eventListeners = new Map();
        this.metrics = {
