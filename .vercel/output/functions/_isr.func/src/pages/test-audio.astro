          this.clearQueue();
        });

        // Queue testing
        document.getElementById('add-chunk-btn').addEventListener('click', () => {
          this.addTestChunk();
        });

        document.getElementById('add-burst-btn').addEventListener('click', () => {
          this.addBurstChunks();
        });

