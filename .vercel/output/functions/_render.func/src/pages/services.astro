---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
import Icon from '../components/Icon.astro';

const services = [
  {
    title: "Executive AI Masterclass",
    subtitle: "1-on-1 Private Training",
    price: "$15,000",
    duration: "6 Weeks",
    features: [
      "Personalized curriculum tailored to your industry",
      "Weekly 2-hour private sessions",
      "Direct access to AI implementation strategies",
      "Custom AI tools built for your business",
      "30-day post-training support",
      "ROI guarantee"
    ],
    highlight: true,
    cta: "Schedule Strategy Session"
  },
  {
    title: "AI Leadership Workshop",
    subtitle: "Small Group Training",
    price: "$5,000",
    duration: "3 Days",
    features: [
      "Maximum 8 executives per cohort",
      "Intensive hands-on AI training",
      "Peer learning and networking",
      "AI strategy playbooks",
      "Implementation roadmap",
      "Certificate of completion"
    ],
    highlight: false,
    cta: "View Next Dates"
  },
  {
    title: "AI Advisory Retainer",
    subtitle: "Ongoing Strategic Guidance",
    price: "$10,000/mo",
    duration: "Minimum 3 Months",
    features: [
      "Monthly strategy sessions",
      "Unlimited email consultations",
      "AI vendor evaluation",
      "Team training sessions",
      "Priority support",
      "Quarterly business reviews"
    ],
    highlight: false,
    cta: "Learn More"
  }
];
---

<Layout title="AI Training Services">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-brand-pearl to-gray-50 dark:from-dark-base dark:to-dark-surface">
    <div class="container-narrow">
      <AnimatedSection animate="fade">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-bold text-brand-charcoal dark:text-dark-text mb-6">
            Transform Your Leadership with
            <span class="text-gradient block mt-2">Synthetic Intelligence™</span>
          </h1>
          <p class="text-xl text-gray-700 dark:text-dark-text-secondary">
            Private, personalized AI training designed for executives who refuse to be left behind.
          </p>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-padding">
    <div class="container-narrow">
      <AnimatedSection animate="slide">
        <div class="grid md:grid-cols-3 gap-8 mb-16">
          {services.map((service, index) => (
            <div 
              class={`relative bg-white dark:bg-dark-surface-2 rounded-xl shadow-lg dark:shadow-black/30 overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl dark:hover:shadow-black/40 ${
                service.highlight ? 'ring-2 ring-brand-gold dark:ring-accent-gold' : ''
              } border border-gray-100 dark:border-dark-border`}
              style={`animation-delay: ${index * 0.1}s`}
              data-service={service.title}
            >
              {service.highlight && (
                <div class="absolute top-0 right-0 bg-brand-gold dark:bg-accent-gold text-white dark:text-dark-base px-4 py-1 text-sm font-semibold">
                  MOST POPULAR
                </div>
              )}
              
              <div class="p-8">
                <h3 class="text-2xl font-bold text-brand-charcoal dark:text-dark-text mb-2">
                  {service.title}
                </h3>
                <p class="text-gray-600 dark:text-dark-text-tertiary mb-4">{service.subtitle}</p>
                
                <div class="mb-6">
                  <span class="text-4xl font-bold text-brand-charcoal dark:text-dark-text">{service.price}</span>
                  <span class="text-gray-600 dark:text-dark-text-tertiary ml-2">/ {service.duration}</span>
                </div>
                
                <ul class="space-y-3 mb-8">
                  {service.features.map(feature => (
                    <li class="flex items-start gap-3">
                      <Icon name="lucide:check-circle" class="w-5 h-5 text-brand-gold dark:text-accent-gold mt-0.5 flex-shrink-0" />
                      <span class="text-gray-700 dark:text-dark-text-secondary">{feature}</span>
                    </li>
                  ))}
                </ul>
                
                <Button 
                  href="#schedule" 
                  variant={service.highlight ? "primary" : "secondary"}
                  class="w-full justify-center calendly-trigger"
                >
                  {service.cta}
                </Button>
              </div>
            </div>
          ))}
        </div>
      </AnimatedSection>

      <!-- Value Props -->
      <AnimatedSection animate="fade" delay={0.3}>
        <div class="bg-brand-charcoal dark:bg-dark-surface-2 text-white rounded-xl p-12 text-center border border-transparent dark:border-dark-border">
          <h2 class="text-3xl font-bold mb-8">Why Choose Executive AI Training?</h2>
          <div class="grid md:grid-cols-3 gap-8">
            <div>
              <div class="w-16 h-16 mx-auto mb-4 bg-white/10 dark:bg-dark-surface-3/50 rounded-full flex items-center justify-center">
                <Icon name="lucide:target" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
              </div>
              <h3 class="text-xl font-semibold mb-2">100% Customized</h3>
              <p class="text-gray-300 dark:text-dark-text-tertiary">Every session tailored to your specific business challenges and opportunities.</p>
            </div>
            <div>
              <div class="w-16 h-16 mx-auto mb-4 bg-white/10 dark:bg-dark-surface-3/50 rounded-full flex items-center justify-center">
                <Icon name="lucide:lock" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
              </div>
              <h3 class="text-xl font-semibold mb-2">Completely Private</h3>
              <p class="text-gray-300 dark:text-dark-text-tertiary">Your competitive strategies stay confidential. No group sharing required.</p>
            </div>
            <div>
              <div class="w-16 h-16 mx-auto mb-4 bg-white/10 dark:bg-dark-surface-3/50 rounded-full flex items-center justify-center">
                <Icon name="lucide:trending-up" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
              </div>
              <h3 class="text-xl font-semibold mb-2">ROI Guaranteed</h3>
              <p class="text-gray-300 dark:text-dark-text-tertiary">We guarantee measurable results or your investment back. No questions asked.</p>
            </div>
          </div>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="section-padding bg-gray-50 dark:bg-dark-base">
    <div class="container-narrow">
      <AnimatedSection animate="scale">
        <div class="max-w-4xl mx-auto">
          <div class="bg-white dark:bg-dark-surface-2 rounded-xl shadow-xl dark:shadow-black/30 p-12 border border-gray-100 dark:border-dark-border">
            <Icon name="lucide:quote" class="w-16 h-16 text-brand-gold dark:text-accent-gold mb-6" />
            <blockquote class="text-2xl text-gray-800 dark:text-dark-text mb-6 leading-relaxed">
              "Russell's AI Masterclass didn't just teach us about AI—it transformed how we operate. 
              We've automated 40% of our processes and gained insights that put us years ahead of competitors. 
              The ROI was evident within the first month."
            </blockquote>
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-brand-navy dark:bg-accent-gold rounded-full flex items-center justify-center text-white dark:text-dark-base font-bold text-xl">
                JD
              </div>
              <div>
                <p class="font-semibold text-lg text-brand-charcoal dark:text-dark-text">James Davidson</p>
                <p class="text-gray-600 dark:text-dark-text-tertiary">CEO, TechVentures Inc.</p>
              </div>
            </div>
          </div>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="schedule" class="section-padding bg-brand-charcoal dark:bg-dark-surface-2 text-white">
    <div class="container-narrow">
      <AnimatedSection animate="slide">
        <div class="text-center max-w-3xl mx-auto">
          <h2 class="text-4xl font-bold mb-6">
            Ready to Dominate Your Industry with AI?
          </h2>
          <p class="text-xl mb-8 text-gray-300 dark:text-dark-text-secondary">
            Schedule a confidential strategy session to discuss your specific needs and goals.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button size="lg" class="calendly-trigger">
              Schedule Your Strategy Session
            </Button>
            <Button href="/ai-audit" variant="outline" size="lg" class="!text-white !border-white hover:!bg-white hover:!text-brand-charcoal dark:hover:!text-dark-base">
              Take the AI Opportunity Audit
            </Button>
          </div>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Layout>

<style>
  .service-card {
    animation: fadeInUp 0.6s ease-out forwards;
    animation-play-state: paused;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>