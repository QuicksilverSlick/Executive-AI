---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
import Icon from '../components/Icon.astro';

const sections = [
  {
    id: 'overview',
    title: 'Quick Overview',
    icon: 'lucide:zap',
    summary: 'Key terms at a glance'
  },
  {
    id: 'acceptance',
    title: '1. Acceptance & Eligibility',
    icon: 'lucide:check-circle',
    summary: 'Who can use our services and how to accept'
  },
  {
    id: 'services',
    title: '2. Services Description',
    icon: 'lucide:briefcase',
    summary: 'What we offer and requirements'
  },
  {
    id: 'registration',
    title: '3. Account Registration',
    icon: 'lucide:user-plus',
    summary: 'Creating and managing your account'
  },
  {
    id: 'payment',
    title: '4. Payment Terms',
    icon: 'lucide:credit-card',
    summary: 'Pricing, billing, and refunds'
  },
  {
    id: 'cancellation',
    title: '5. Cancellation & Refunds',
    icon: 'lucide:rotate-ccw',
    summary: 'Our flexible cancellation policies'
  },
  {
    id: 'intellectual-property',
    title: '6. Intellectual Property',
    icon: 'lucide:shield',
    summary: 'Content ownership and usage rights'
  },
  {
    id: 'user-conduct',
    title: '7. User Conduct',
    icon: 'lucide:users',
    summary: 'Expected behavior and restrictions'
  },
  {
    id: 'privacy',
    title: '8. Privacy & Confidentiality',
    icon: 'lucide:lock',
    summary: 'How we protect your information'
  },
  {
    id: 'disclaimers',
    title: '9. Disclaimers & Limitations',
    icon: 'lucide:alert-triangle',
    summary: 'Important legal protections'
  },
  {
    id: 'dispute-resolution',
    title: '10. Dispute Resolution',
    icon: 'lucide:scale',
    summary: 'How we handle disagreements'
  }
];
---

<Layout 
  title="Terms of Service - Executive AI Training" 
  description="Clear, transparent terms of service for Grey Matter LLC's AI training services."
>
  <style>
    /* CSS variables for consistent sizing */
    :root {
      --header-height: 5.5rem; /* Define header height globally */
      --sidebar-width: 320px;
    }
    
    /* Enable smooth scrolling with header offset - 2025 best practice */
    html {
      scroll-behavior: smooth;
      scroll-padding-top: var(--header-height); /* Global offset for sticky header */
    }
    
    /* Respect reduced motion preference */
    @media (prefers-reduced-motion: reduce) {
      html {
        scroll-behavior: auto;
      }
    }

    .terms-container {
      /* Use CSS variables defined in :root */
    }

    @media (max-width: 1024px) {
      :root {
        --sidebar-width: 100%;
      }
    }

    .progress-bar {
      transition: width 0.3s ease;
    }

    .sticky-nav {
      position: sticky;
      top: var(--header-height, 5.5rem);
      max-height: calc(100vh - var(--header-height, 5.5rem) - 2rem);
      overflow-y: auto;
    }

    .sticky-nav::-webkit-scrollbar {
      width: 4px;
    }

    .sticky-nav::-webkit-scrollbar-track {
      background: transparent;
    }

    .sticky-nav::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 2px;
    }

    details summary {
      cursor: pointer;
      user-select: none;
    }

    details summary::-webkit-details-marker {
      display: none;
    }

    .highlight-box {
      background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
      background-clip: padding-box;
      border: 2px solid transparent;
    }

    .dark .highlight-box {
      background: linear-gradient(135deg, #d97706 0%, #dc2626 100%);
    }
  </style>

  <!-- Progress Bar -->
  <div class="fixed top-20 left-0 right-0 h-1 bg-gray-200 dark:bg-gray-800 z-40">
    <div id="progress-bar" class="progress-bar h-full bg-brand-gold dark:bg-accent-gold" style="width: 0%"></div>
  </div>

  <!-- Header Section -->
  <section class="bg-gradient-to-br from-gray-50 to-white dark:from-dark-surface dark:to-dark-base py-12 mt-1">
    <div class="container-narrow">
      <AnimatedSection animate="fade">
        <div class="text-center mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            Terms of Service
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            We believe in transparency. Our terms are written in plain English so you know exactly what you're agreeing to.
          </p>
        </div>

        <!-- Key Info Cards -->
        <div class="grid md:grid-cols-3 gap-4 mb-8">
          <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-6 shadow-sm">
            <Icon name="lucide:calendar" class="w-8 h-8 text-brand-gold dark:text-accent-gold mb-3" />
            <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Effective Date</h3>
            <p class="text-gray-600 dark:text-gray-400">January 7, 2025</p>
          </div>
          <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-6 shadow-sm">
            <Icon name="lucide:clock" class="w-8 h-8 text-brand-gold dark:text-accent-gold mb-3" />
            <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Reading Time</h3>
            <p class="text-gray-600 dark:text-gray-400">~15 minutes</p>
          </div>
          <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-6 shadow-sm">
            <Icon name="lucide:globe" class="w-8 h-8 text-brand-gold dark:text-accent-gold mb-3" />
            <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Jurisdiction</h3>
            <p class="text-gray-600 dark:text-gray-400">Oklahoma, USA</p>
          </div>
        </div>

        <!-- Download Options -->
        <div class="flex flex-wrap justify-center gap-4">
          <button class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-dark-surface-2 text-gray-700 dark:text-dark-text rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <Icon name="lucide:download" class="w-4 h-4" />
            <span>Download PDF</span>
          </button>
          <button class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-dark-surface-2 text-gray-700 dark:text-dark-text rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <Icon name="lucide:printer" class="w-4 h-4" />
            <span>Print Version</span>
          </button>
          <button class="inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-dark-surface-2 text-gray-700 dark:text-dark-text rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <Icon name="lucide:share-2" class="w-4 h-4" />
            <span>Share</span>
          </button>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-white dark:bg-dark-base">
    <div class="container-narrow">
      <div class="terms-container lg:grid lg:grid-cols-[var(--sidebar-width)_1fr] lg:gap-8">
        <!-- Sticky Navigation -->
        <aside class="hidden lg:block">
          <nav class="sticky-nav bg-gray-50 dark:bg-dark-surface rounded-xl p-6">
            <h2 class="font-semibold text-gray-900 dark:text-white mb-4">Table of Contents</h2>
            <ul class="space-y-2">
              {sections.map((section) => (
                <li>
                  <a 
                    href={`#${section.id}`}
                    class="nav-link flex items-start gap-3 p-3 rounded-lg hover:bg-white dark:hover:bg-dark-surface-3 transition-colors group"
                    data-section={section.id}
                  >
                    <Icon name={section.icon} class="w-5 h-5 text-gray-400 group-hover:text-brand-gold dark:group-hover:text-accent-gold mt-0.5 flex-shrink-0" />
                    <div class="text-sm">
                      <div class="font-medium text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white">
                        {section.title}
                      </div>
                      <div class="text-gray-500 dark:text-gray-500 text-xs mt-0.5">
                        {section.summary}
                      </div>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </aside>

        <!-- Content Sections -->
        <div class="space-y-8">
          <!-- Quick Overview Section -->
          <AnimatedSection animate="slide" class="section-card" id="overview">
            <div class="highlight-box rounded-2xl p-8 text-white">
              <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
                <Icon name="lucide:zap" class="w-8 h-8" />
                The Essentials - What You Need to Know
              </h2>
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <h3 class="font-semibold mb-3 flex items-center gap-2">
                    <Icon name="lucide:check" class="w-5 h-5" />
                    Your Rights
                  </h3>
                  <ul class="space-y-2 text-sm">
                    <li>✓ Cancel anytime with our flexible policies</li>
                    <li>✓ Own the AI outputs you create with our tools</li>
                    <li>✓ Access your data whenever you need it</li>
                    <li>✓ Get full refunds per our cancellation terms</li>
                  </ul>
                </div>
                <div>
                  <h3 class="font-semibold mb-3 flex items-center gap-2">
                    <Icon name="lucide:shield" class="w-5 h-5" />
                    Our Commitments
                  </h3>
                  <ul class="space-y-2 text-sm">
                    <li>✓ Keep your data secure and confidential</li>
                    <li>✓ Never sell your information to third parties</li>
                    <li>✓ Provide clear 48-hour cancellation policies</li>
                    <li>✓ Deliver professional training services</li>
                  </ul>
                </div>
              </div>
            </div>
          </AnimatedSection>

          <!-- Acceptance & Eligibility -->
          <AnimatedSection animate="slide" class="section-card" id="acceptance">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:check-circle" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                1. Acceptance & Eligibility
              </h2>
              
              <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 mb-6">
                <p class="text-sm text-blue-800 dark:text-blue-300">
                  <strong>Plain English:</strong> By using our services, you agree to these terms. You must be 18+ and authorized to act on behalf of your organization.
                </p>
              </div>

              <div class="prose prose-gray dark:prose-invert max-w-none">
                <p>By accessing or using the services provided by Grey Matter LLC ("Company," "we," "us," or "our"), you agree to be bound by these Terms of Service.</p>
                
                <details class="mt-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                  <summary class="px-4 py-3 font-medium flex items-center justify-between">
                    <span>Full Legal Text</span>
                    <Icon name="lucide:chevron-down" class="w-5 h-5 transform transition-transform" />
                  </summary>
                  <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      These Terms of Service ("Terms") constitute a legally binding agreement between you and Grey Matter LLC. If you are using our services on behalf of an organization, you represent and warrant that you have the authority to bind that organization to these Terms, and your acceptance of these Terms will be treated as acceptance by that organization.
                    </p>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-3">
                      You must be at least 18 years old and capable of entering into a legally binding contract to use our services. By using our services, you represent and warrant that you meet these eligibility requirements.
                    </p>
                  </div>
                </details>
              </div>
            </div>
          </AnimatedSection>

          <!-- Services Description -->
          <AnimatedSection animate="slide" class="section-card" id="services">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:briefcase" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                2. Services Description
              </h2>
              
              <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 mb-6">
                <p class="text-sm text-blue-800 dark:text-blue-300">
                  <strong>Plain English:</strong> We provide AI training through video calls and on-site sessions. You need a good internet connection and a computer with camera/mic for virtual sessions.
                </p>
              </div>

              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                    <Icon name="lucide:video" class="w-5 h-5 text-brand-gold dark:text-accent-gold" />
                    Virtual Training
                  </h3>
                  <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
                    <li>• Live instructor-led sessions via Zoom/Teams</li>
                    <li>• Minimum 5 Mbps internet required</li>
                    <li>• Computer with webcam and microphone</li>
                    <li>• Current web browser</li>
                  </ul>
                </div>
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                    <Icon name="lucide:building" class="w-5 h-5 text-brand-gold dark:text-accent-gold" />
                    On-Site Training
                  </h3>
                  <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
                    <li>• In-person sessions at your location</li>
                    <li>• Custom curriculum for your team</li>
                    <li>• Hands-on workshops</li>
                    <li>• Executive strategy sessions</li>
                  </ul>
                </div>
              </div>

              <details class="border border-gray-200 dark:border-gray-700 rounded-lg">
                <summary class="px-4 py-3 font-medium flex items-center justify-between cursor-pointer">
                  <span>View All Services</span>
                  <Icon name="lucide:chevron-down" class="w-5 h-5 transform transition-transform" />
                </summary>
                <div class="px-4 py-4 border-t border-gray-200 dark:border-gray-700 space-y-3">
                  <div>
                    <h4 class="font-medium text-gray-900 dark:text-white">AI Strategy Consulting</h4>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Customized consultation services for AI implementation</p>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900 dark:text-white">Online Courses</h4>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Self-paced educational content and resources</p>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900 dark:text-white">Executive Coaching</h4>
                    <p class="text-sm text-gray-600 dark:text-gray-400">One-on-one AI leadership development</p>
                  </div>
                </div>
              </details>
            </div>
          </AnimatedSection>

          <!-- Account Registration -->
          <AnimatedSection animate="slide" class="section-card" id="registration">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:user-plus" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                3. Account Registration
              </h2>
              
              <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 mb-6">
                <p class="text-sm text-blue-800 dark:text-blue-300">
                  <strong>Plain English:</strong> Keep your login info safe and tell us right away if someone else uses your account.
                </p>
              </div>

              <div class="space-y-4">
                <div class="flex items-start gap-3">
                  <Icon name="lucide:shield-check" class="w-5 h-5 text-green-600 dark:text-green-400 mt-0.5" />
                  <div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Your Responsibilities</h3>
                    <ul class="mt-2 space-y-1 text-sm text-gray-600 dark:text-gray-400">
                      <li>• Provide accurate, current information</li>
                      <li>• Keep your password confidential</li>
                      <li>• Notify us of unauthorized use immediately</li>
                      <li>• Update your information as needed</li>
                    </ul>
                  </div>
                </div>
                
                <div class="flex items-start gap-3">
                  <Icon name="lucide:lock" class="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5" />
                  <div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Security Best Practices</h3>
                    <ul class="mt-2 space-y-1 text-sm text-gray-600 dark:text-gray-400">
                      <li>• Use a strong, unique password</li>
                      <li>• Enable two-factor authentication</li>
                      <li>• Don't share your credentials</li>
                      <li>• Log out when using shared computers</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </AnimatedSection>

          <!-- Payment Terms -->
          <AnimatedSection animate="slide" class="section-card" id="payment">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:credit-card" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                4. Payment Terms
              </h2>
              
              <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 mb-6">
                <p class="text-sm text-blue-800 dark:text-blue-300">
                  <strong>Plain English:</strong> Training requires 50% deposit to book, balance due 7 days before. Corporate clients can get Net 30 terms with approval.
                </p>
              </div>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Standard Payment Schedule</h3>
                  <div class="space-y-3">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 bg-brand-gold/10 dark:bg-accent-gold/10 rounded-full flex items-center justify-center">
                        <span class="text-sm font-bold text-brand-gold dark:text-accent-gold">1</span>
                      </div>
                      <div class="text-sm">
                        <div class="font-medium text-gray-900 dark:text-white">50% Deposit</div>
                        <div class="text-gray-600 dark:text-gray-400">Due upon booking</div>
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 bg-brand-gold/10 dark:bg-accent-gold/10 rounded-full flex items-center justify-center">
                        <span class="text-sm font-bold text-brand-gold dark:text-accent-gold">2</span>
                      </div>
                      <div class="text-sm">
                        <div class="font-medium text-gray-900 dark:text-white">Remaining Balance</div>
                        <div class="text-gray-600 dark:text-gray-400">Due 7 days before training</div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Payment Methods</h3>
                  <div class="grid grid-cols-2 gap-3">
                    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                      <Icon name="lucide:credit-card" class="w-4 h-4" />
                      Credit/Debit
                    </div>
                    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                      <Icon name="lucide:building-2" class="w-4 h-4" />
                      ACH Transfer
                    </div>
                    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                      <Icon name="lucide:send" class="w-4 h-4" />
                      Wire Transfer
                    </div>
                    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                      <Icon name="lucide:file-text" class="w-4 h-4" />
                      Purchase Order
                    </div>
                  </div>
                </div>
              </div>

              <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <strong>Late Payment:</strong> 1.5% monthly fee • <strong>Corporate Terms:</strong> Net 30 available with approval
                </p>
              </div>
            </div>
          </AnimatedSection>

          <!-- Cancellation & Refunds -->
          <AnimatedSection animate="slide" class="section-card" id="cancellation">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:rotate-ccw" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                5. Cancellation & Refund Policy
              </h2>
              
              <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4 mb-6">
                <p class="text-sm text-green-800 dark:text-green-300">
                  <strong>Good News:</strong> We have flexible cancellation policies. The more notice you give, the more you save.
                </p>
              </div>

              <div class="space-y-6">
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                    <Icon name="lucide:video" class="w-5 h-5 text-brand-gold dark:text-accent-gold" />
                    Virtual Training Cancellation
                  </h3>
                  <div class="space-y-2">
                    <div class="flex items-center justify-between p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                      <span class="text-sm font-medium">48+ hours notice</span>
                      <span class="text-sm font-bold text-green-600 dark:text-green-400">Full credit</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
                      <span class="text-sm font-medium">24-48 hours notice</span>
                      <span class="text-sm font-bold text-yellow-600 dark:text-yellow-400">50% credit</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
                      <span class="text-sm font-medium">Less than 24 hours</span>
                      <span class="text-sm font-bold text-red-600 dark:text-red-400">No refund</span>
                    </div>
                  </div>
                </div>

                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                    <Icon name="lucide:building" class="w-5 h-5 text-brand-gold dark:text-accent-gold" />
                    On-Site Training Cancellation
                  </h3>
                  <div class="space-y-2">
                    <div class="flex items-center justify-between p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                      <span class="text-sm font-medium">14+ days notice</span>
                      <span class="text-sm font-bold text-green-600 dark:text-green-400">Full refund*</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
                      <span class="text-sm font-medium">7-13 days notice</span>
                      <span class="text-sm font-bold text-yellow-600 dark:text-yellow-400">50% refund</span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
                      <span class="text-sm font-medium">Less than 7 days</span>
                      <span class="text-sm font-bold text-red-600 dark:text-red-400">No refund</span>
                    </div>
                  </div>
                  <p class="text-xs text-gray-500 dark:text-gray-500 mt-2">*Minus any non-refundable expenses already incurred</p>
                </div>
              </div>
            </div>
          </AnimatedSection>

          <!-- Intellectual Property -->
          <AnimatedSection animate="slide" class="section-card" id="intellectual-property">
            <div class="bg-white dark:bg-dark-surface-2 rounded-xl p-8 shadow-sm">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                <Icon name="lucide:shield" class="w-8 h-8 text-brand-gold dark:text-accent-gold" />
                6. Intellectual Property Rights
