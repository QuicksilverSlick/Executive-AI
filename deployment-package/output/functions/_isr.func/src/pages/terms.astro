  <script>
    // Progress bar functionality
    function updateProgressBar() {
      const scrollTop = window.scrollY;
      const documentHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = (scrollTop / documentHeight) * 100;
      const progressBar = document.getElementById('progress-bar');
      if (progressBar) {
        progressBar.style.width = scrollPercent + '%';
      }
    }

    // Section highlighting in navigation
    function updateActiveSection() {
      const sections = document.querySelectorAll('.section-card');
      const navLinks = document.querySelectorAll('.nav-link');
      
      // Get header height from CSS variable for consistency
      const rootStyle = getComputedStyle(document.documentElement);
      const headerHeight = rootStyle.getPropertyValue('--header-height') || '5.5rem';
      const headerOffsetPx = parseFloat(headerHeight) * parseFloat(rootStyle.fontSize);
      
      let currentSection = '';
      
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        if (rect.top <= headerOffsetPx + 20 && rect.bottom >= headerOffsetPx + 20) {
          currentSection = section.id;
        }
      });
      
      navLinks.forEach(link => {
        if (link.getAttribute('data-section') === currentSection) {
          link.classList.add('bg-white', 'dark:bg-dark-surface-2', 'shadow-sm');
        } else {
          link.classList.remove('bg-white', 'dark:bg-dark-surface-2', 'shadow-sm');
        }
      });
    }

    // Initialize
    window.addEventListener('scroll', () => {
      updateProgressBar();
      updateActiveSection();
    });
    
    window.addEventListener('resize', updateProgressBar);
    
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Expand/collapse animation for details elements
    document.querySelectorAll('details').forEach(details => {
      details.addEventListener('toggle', function() {
        const icon = this.querySelector('summary svg');
        if (icon) {
          if (this.open) {
            icon.style.transform = 'rotate(180deg)';
          } else {
            icon.style.transform = 'rotate(0deg)';
          }
        }
      });
    });
  </script>
