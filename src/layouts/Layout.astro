---
import '../styles/global.css';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import AnalyticsInit from '../components/AnalyticsInit.astro';
import CalendlyTracking from '../components/CalendlyTracking.astro';
import FontPreload from '../components/FontPreload.astro';
import SEO from '../components/SEO.astro';
import PerformanceMonitor from '../components/PerformanceMonitor.astro';
import ResourceHints from '../components/ResourceHints.astro';
import ThemeScript from '../components/ThemeScript.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Icon from '../components/Icon.astro';
import TabletLayout from '../components/TabletLayout.astro';
import Navigation from '../components/Navigation.astro';
import WebRTCVoiceWidget from '../components/voice-agent/WebRTCVoiceWidget.astro';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  noindex?: boolean;
  schema?: Record<string, any>;
  disableVoiceWidget?: boolean;
}

const { 
  title, 
  description = "Transform from overwhelmed observer to Master of Synthetic Intelligence™ with our private custom AI masterclass for executives.",
  ogImage = "/og-image.jpg",
  noindex = false,
  schema,
  disableVoiceWidget = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Get GA4 ID from environment variables
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || 'G-XXXXXXXXXX';
---

<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <script>
      // Remove no-js class if JavaScript is enabled
      document.documentElement.classList.remove('no-js');
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Theme Script (must be first to prevent flash) -->
    <ThemeScript />
    
    <!-- Resource Hints -->
    <ResourceHints />
    
    <!-- Preload Fonts -->
    <FontPreload />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0A2240" />
    
    <!-- SEO Meta Tags -->
    <SEO 
      title={title} 
      description={description} 
      ogImage={ogImage}
      canonicalURL={canonicalURL}
      noindex={noindex}
      schema={schema}
    />
    
    <!-- Google Analytics -->
    <GoogleAnalytics id={GA_MEASUREMENT_ID} />
  </head>
  <body>
    <slot name="header">
      <header class="fixed top-0 left-0 right-0 z-50 bg-brand-pearl/95 dark:bg-dark-surface-2/95 backdrop-blur-sm border-b border-gray-100 dark:border-dark-border">
        <Navigation />
      </header>
    </slot>
    
    <main class="pt-20">
      <TabletLayout />
      <slot />
    </main>
    
    <slot name="footer">
      <footer class="bg-brand-charcoal dark:bg-dark-surface border-t dark:border-dark-border text-white">
        <div class="container-narrow py-12">
          <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
            <!-- Brand - Left Section -->
            <div class="md:col-span-5">
              <h3 class="text-2xl font-bold mb-4">
                Executive<span class="text-brand-gold dark:text-accent-gold">AI</span>
              </h3>
              <p class="text-gray-300 dark:text-gray-400 mb-4 max-w-sm">
                Transform from overwhelmed observer to Master of Synthetic Intelligence™
              </p>
              <p class="text-sm text-gray-400 dark:text-gray-500">
                © {new Date().getFullYear()} Executive AI Training. All rights reserved.
              </p>
            </div>
            
            <!-- Center Links Section -->
            <div class="md:col-span-4 md:col-start-6">
              <div class="grid grid-cols-2 gap-8">
                <!-- Quick Links -->
                <div>
                  <h4 class="font-semibold mb-4 text-brand-gold dark:text-accent-gold">Quick Links</h4>
                  <ul class="space-y-2">
                    <li><a href="/services" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Services</a></li>
                    <li><a href="/resources" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Resources</a></li>
                    <li><a href="/case-studies" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Case Studies</a></li>
                    <li><a href="/about" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">About</a></li>
                  </ul>
                </div>
                
                <!-- Legal -->
                <div>
                  <h4 class="font-semibold mb-4 text-brand-gold dark:text-accent-gold">Legal</h4>
                  <ul class="space-y-2">
                    <li><a href="/privacy" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Privacy Policy</a></li>
                    <li><a href="/terms" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Terms of Service</a></li>
                    <li><a href="/contact" class="text-gray-300 hover:text-brand-gold dark:hover:text-accent-gold transition-colors">Contact</a></li>
                  </ul>
                </div>
              </div>
            </div>
            
            <!-- Right Section - Social/CTA -->
            <div class="md:col-span-3 md:text-right">
              <h4 class="font-semibold mb-4 text-brand-gold dark:text-accent-gold">Get Started</h4>
              <p class="text-gray-300 dark:text-gray-400 mb-4">
                Ready to transform your business with AI?
              </p>
              <a href="#schedule" class="inline-flex items-center gap-2 text-brand-gold dark:text-accent-gold hover:text-brand-gold-warm dark:hover:text-accent-gold-light transition-colors font-semibold">
                Schedule a Strategy Session
                <Icon name="lucide:arrow-right" class="w-4 h-4" />
              </a>
            </div>
          </div>
        </div>
      </footer>
    </slot>
    
    <!-- Analytics Initialization -->
    <AnalyticsInit />
    <CalendlyTracking />
    <PerformanceMonitor />
    
    <!-- WebRTC Voice Assistant Widget -->
    {!disableVoiceWidget && (
      <WebRTCVoiceWidget 
        position="bottom-right"
        theme="auto"
        apiEndpoint="/api/voice-agent"
        showTranscript={true}
        enableKeyboardShortcut={true}
        autoMinimize={true}
      />
    )}
    
    <!-- Voice Agent Initialization -->
    {!disableVoiceWidget && (
      <script src="/src/scripts/voice-agent-init.js" type="module"></script>
    )}
  </body>
</html>