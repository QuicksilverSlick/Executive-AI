---
// This component provides tablet-optimized layout utilities
---

<style is:global>
  /* Tablet-specific layout fixes */
  @media (min-width: 640px) and (max-width: 1023px) {
    /* Button consistency */
    .btn,
    a[href].btn-primary,
    a[href].btn-secondary,
    a[href].btn-outline,
    button.btn-primary,
    button.btn-secondary,
    button.btn-outline {
      @apply w-full max-w-xs mx-auto !important;
      min-height: 48px !important;
      padding: 12px 32px !important;
      font-size: 16px !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }

    /* Button groups */
    .flex:has(> .btn) {
      @apply flex-col items-center gap-4;
    }

    /* Trust indicators grid */
    .trust-grid,
    .credibility-grid {
      @apply grid grid-cols-2 gap-6 max-w-2xl mx-auto;
    }

    /* Section spacing */
    section {
      @apply py-12;
    }

    /* Typography */
    h1 {
      @apply text-4xl;
      line-height: 1.1;
    }

    h2 {
      @apply text-3xl;
      line-height: 1.2;
    }

    h3 {
      @apply text-2xl;
      line-height: 1.3;
    }

    p {
      @apply text-base leading-relaxed;
      max-width: 65ch;
      margin-left: auto;
      margin-right: auto;
    }

    /* Container width */
    .container-narrow {
      @apply px-6;
      max-width: 720px;
    }

    /* Cards */
    .card,
    [class*="card"] {
      @apply max-w-md mx-auto;
    }

    /* Feature grids */
    .grid.md\:grid-cols-3 {
      @apply grid-cols-1 gap-6;
    }

    .grid.md\:grid-cols-3 > div {
      @apply max-w-md mx-auto w-full;
    }

    /* Icon boxes */
    .icon-box,
    div:has(> svg) {
      @apply w-16 h-16 flex items-center justify-center;
    }

    /* Form elements */
    input,
    textarea,
    select {
      font-size: 16px !important; /* Prevents zoom on iOS */
      min-height: 48px;
    }

    /* Navigation */
    nav {
      @apply px-6;
    }

    /* Footer */
    footer .grid {
      @apply grid-cols-2 gap-8;
    }

    /* Resource cards */
    .resource-card {
      @apply w-full max-w-md mx-auto;
    }

    /* Service cards */
    .service-card,
    div[data-service] {
      @apply w-full max-w-md mx-auto;
    }

    /* Testimonials */
    .testimonial-card {
      @apply max-w-lg mx-auto;
    }

    /* CTA sections */
    .cta-section {
      @apply text-center;
    }

    .cta-section .btn {
      @apply mx-auto;
    }

  }

  /* Landscape tablet */
  @media (min-width: 768px) and (max-width: 1023px) and (orientation: landscape) {
    /* Side-by-side buttons in landscape */
    .flex:has(> .btn):has(> .btn + .btn) {
      @apply flex-row justify-center;
    }

    .flex:has(> .btn) > .btn {
      @apply w-auto min-w-[220px];
    }

    /* Reduce vertical spacing */
    section {
      @apply py-8;
    }
  }

  /* Touch-friendly states */
  @media (hover: none) and (pointer: coarse) {
    .btn:active {
      @apply scale-95;
    }

    .btn:hover {
      transform: none;
    }
  }
</style>