---
// Resource hints for optimal performance
const isProd = import.meta.env.PROD;
---

<!-- DNS Prefetch for third-party domains -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com">
<link rel="dns-prefetch" href="https://fonts.gstatic.com">
{isProd && (
  <>
    <link rel="dns-prefetch" href="https://www.google-analytics.com">
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="dns-prefetch" href="https://calendly.com">
  </>
)}

<!-- Preconnect to establish early connections -->
<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Prefetch key pages for instant navigation -->
<link rel="prefetch" href="/services" as="document">
<link rel="prefetch" href="/ai-audit" as="document">

<!-- Note: Critical resources are automatically handled by Astro's build process -->
<!-- Astro generates hashed filenames for assets, so we don't manually preload them -->